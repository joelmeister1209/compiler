PROGRAM factorial2
BEGIN
	STRING input := "Please enter an integer number: ";
	STRING eol := "\n";
STRING test1 := "test a: ";--debug
STRING test2 := "test tret: ";--debug
STRING test3 := "test ret: ";--debug
	
	FUNCTION INT factorial(INT a)
	BEGIN
		INT ret;
		INT tret;
		IF (a = 1)
			RETURN 1;
		ELSIF (TRUE)
WRITE(test1);--debug
WRITE(a);--debug
WRITE(eol);--debug
			tret := factorial(a-1);
WRITE(test2);--debug
WRITE(tret);--debug
WRITE(eol);--debug
WRITE(test1);--debug
WRITE(a);--debug
WRITE(eol);--debug
			ret := tret*a;
WRITE(test3);--debug
WRITE(ret);--debug
WRITE(eol);--debug
		ENDIF
		RETURN ret;
	END

	FUNCTION INT main ()
	BEGIN
		INT num;
		INT result;
		WRITE(input);
		READ(num);
		
		IF(num = 1)
			result := 1;
		ELSIF(num >1)
			  result := factorial(num); 
	    ELSIF(TRUE)
			  result := 0;
		ENDIF
		WRITE(result,eol);
		RETURN 0;
	END
END
